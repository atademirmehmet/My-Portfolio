---
interface Props {
  t: any;
}

const { t } = Astro.props;
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-cyber-darker/90 backdrop-blur-md border-b border-cyber-border">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center space-x-2">
        <span class="text-cyber-cyan font-mono text-lg">$</span>
        <span class="font-mono text-white font-semibold">mehmet<span class="text-cyber-green">@</span>atademir</span>
      </div>
      <div class="hidden md:flex items-center space-x-8">
        <a href="#architecture" class="text-gray-400 hover:text-cyber-cyan glow-link font-mono text-sm">{t.nav.architecture}</a>
        <a href="#projects" class="text-gray-400 hover:text-cyber-cyan glow-link font-mono text-sm">{t.nav.projects}</a>
        <a href="#skills" class="text-gray-400 hover:text-cyber-cyan glow-link font-mono text-sm">{t.nav.skills}</a>
        <a href="#contact" class="text-gray-400 hover:text-cyber-cyan glow-link font-mono text-sm">{t.nav.contact}</a>
        <!-- Language Switcher -->
        <a href={t.lang.switch_url} class="px-3 py-1 border border-cyber-purple text-cyber-purple hover:bg-cyber-purple hover:text-white font-mono text-sm rounded transition-all">
          {t.lang.switch}
        </a>
      </div>
      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center space-x-4">
        <a href={t.lang.switch_url} class="px-2 py-1 border border-cyber-purple text-cyber-purple font-mono text-xs rounded">
          {t.lang.switch}
        </a>
        <button id="mobile-menu-btn" class="text-gray-400 hover:text-cyber-cyan">
          <i class="fas fa-bars text-xl"></i>
        </button>
      </div>
    </div>
  </div>
  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-cyber-darker border-t border-cyber-border">
    <div class="px-4 py-4 space-y-3">
      <a href="#architecture" class="block text-gray-400 hover:text-cyber-cyan font-mono text-sm">{t.nav.architecture}</a>
      <a href="#projects" class="block text-gray-400 hover:text-cyber-cyan font-mono text-sm">{t.nav.projects}</a>
      <a href="#skills" class="block text-gray-400 hover:text-cyber-cyan font-mono text-sm">{t.nav.skills}</a>
      <a href="#contact" class="block text-gray-400 hover:text-cyber-cyan font-mono text-sm">{t.nav.contact}</a>
    </div>
  </div>
</nav>
