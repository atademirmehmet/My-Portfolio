---
interface Props {
  t: any;
}

const { t } = Astro.props;
---

<section id="projects" class="py-20 px-4 bg-cyber-darker/50">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <span class="text-cyber-purple font-mono text-sm">{t.projects.label}</span>
      <h2 class="font-mono text-3xl sm:text-4xl font-bold text-white mt-2 mb-4">
        <span class="text-cyber-cyan">$</span> {t.projects.title}
      </h2>
    </div>

    <!-- Project Cards Grid -->
    <div class="grid md:grid-cols-2 gap-6">

      <!-- Project 1: Realapp -->
      <div class="project-card bg-cyber-card rounded-xl p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center space-x-3">
            <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-cyber-cyan/20 to-cyber-green/20 flex items-center justify-center">
              <i class="fas fa-microchip text-cyber-cyan text-xl"></i>
            </div>
            <div>
              <h3 class="font-mono text-xl font-bold text-white">{t.projects.realapp.name}</h3>
              <span class="text-xs text-cyber-green font-mono">{t.projects.realapp.type}</span>
            </div>
          </div>
          <span class="px-3 py-1 bg-cyber-green/10 text-cyber-green text-xs font-mono rounded-full">{t.projects.realapp.status}</span>
        </div>

        <p class="text-gray-400 mb-6 text-sm leading-relaxed">{t.projects.realapp.description}</p>

        <!-- Tech Stack Icons -->
        <div class="flex flex-wrap gap-2">
          <span class="tech-badge px-3 py-1 bg-cyber-border rounded-md text-xs font-mono text-gray-400 flex items-center space-x-1">
            <i class="fab fa-react text-cyan-400"></i><span>React</span>
          </span>
          <span class="tech-badge px-3 py-1 bg-cyber-border rounded-md text-xs font-mono text-gray-400 flex items-center space-x-1">
            <i class="fab fa-python text-yellow-400"></i><span>Python</span>
          </span>
          <span class="tech-badge px-3 py-1 bg-cyber-border rounded-md text-xs font-mono text-gray-400 flex items-center space-x-1">
            <i class="fab fa-docker text-blue-400"></i><span>Docker</span>
          </span>
          <span class="tech-badge px-3 py-1 bg-cyber-border rounded-md text-xs font-mono text-gray-400 flex items-center space-x-1">
            <i class="fas fa-dharmachakra text-blue-300"></i><span>K8s</span>
          </span>
          <span class="tech-badge px-3 py-1 bg-cyber-border rounded-md text-xs font-mono text-gray-400 flex items-center space-x-1">
            <i class="fab fa-google text-red-400"></i><span>GCP</span>
          </span>
          <span class="tech-badge px-3 py-1 bg-cyber-border rounded-md text-xs font-mono text-gray-400 flex items-center space-x-1">
            <i class="fab fa-gitlab text-orange-400"></i><span>GitLab CI</span>
          </span>
        </div>
      </div>

      <!-- Project 2: Portfolio Website -->
      <div class="project-card bg-cyber-card rounded-xl p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center space-x-3">
            <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-cyber-purple/20 to-cyber-pink/20 flex items-center justify-center">
              <i class="fas fa-globe text-cyber-purple text-xl"></i>
            </div>
            <div>
              <h3 class="font-mono text-xl font-bold text-white">{t.projects.portfolio.name}</h3>
              <span class="text-xs text-cyber-purple font-mono">{t.projects.portfolio.type}</span>
            </div>
          </div>
          <span class="px-3 py-1 bg-cyber-purple/10 text-cyber-purple text-xs font-mono rounded-full">{t.projects.portfolio.status}</span>
        </div>

        <p class="text-gray-400 mb-6 text-sm leading-relaxed">{t.projects.portfolio.description}</p>

        <!-- Tech Stack Icons -->
        <div class="flex flex-wrap gap-2">
          <span class="tech-badge px-3 py-1 bg-cyber-border rounded-md text-xs font-mono text-gray-400 flex items-center space-x-1">
            <i class="fab fa-github text-white"></i><span>Actions</span>
          </span>
          <span class="tech-badge px-3 py-1 bg-cyber-border rounded-md text-xs font-mono text-gray-400 flex items-center space-x-1">
            <i class="fas fa-sync-alt text-cyan-400"></i><span>ArgoCD</span>
          </span>
          <span class="tech-badge px-3 py-1 bg-cyber-border rounded-md text-xs font-mono text-gray-400 flex items-center space-x-1">
            <i class="fas fa-dharmachakra text-blue-300"></i><span>K3s</span>
          </span>
          <span class="tech-badge px-3 py-1 bg-cyber-border rounded-md text-xs font-mono text-gray-400 flex items-center space-x-1">
            <i class="fas fa-anchor text-blue-400"></i><span>Helm</span>
          </span>
          <span class="tech-badge px-3 py-1 bg-cyber-border rounded-md text-xs font-mono text-gray-400 flex items-center space-x-1">
            <i class="fab fa-docker text-cyan-400"></i><span>Docker</span>
          </span>
          <span class="tech-badge px-3 py-1 bg-cyber-border rounded-md text-xs font-mono text-gray-400 flex items-center space-x-1">
            <i class="fas fa-cloud text-orange-400"></i><span>Cloudflare</span>
          </span>
        </div>
      </div>

    </div>
  </div>
</section>
